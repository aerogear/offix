{
  "extends": "tslint:recommended",
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "jsdoc-format": false,
    "quotemark": [
      true,
      "double"
    ],
    "align": false,
    "only-arrow-functions": [
      false
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "object-literal-key-quotes": [
      false
    ],
    "max-classes-per-file": [
      false
    ],
    "no-console": [
      true,
      "log"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "no-unused-variable": true,
    "interface-name": [
      false
    ],
    "ordered-imports": false
  }
}
